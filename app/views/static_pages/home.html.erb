<% provide :title, t(".title_message") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1> <%= t ".title_message" %> </h1>
  <p>
    <%= t(".home_page_message",
      link_to_tutorial: link_to(t(".rubyonrails_message"),
      "https://www.railstutorial.org/")).html_safe %>
  </p>
  <%= link_to t(".signup_link"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: t(".alt_image_rails")),
  "http://rubyonrails.org/" %>
<% end %>
